@model TodoListApp.WebApp.ViewModels.TaskViewModel
@{
    var listId = ViewBag.ListId as int? ?? Model.ToDoListId;
    ViewData["Title"] = "Edit Task";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="mb-4">
                <p class="text-uppercase text-muted mb-1 small">@ViewBag.ListTitle</p>
                <h1 class="display-6 fw-bold text-primary">Edit Task</h1>
                <p class="text-muted">Update the task properties below.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" asp-route-id="@Model.Id" asp-route-listId="@listId">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ToDoListId" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control form-control-lg" />
                            <span asp-validation-for="Title" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-semibold"></label>
                                <input asp-for="DueDate" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold"></label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<TodoListApp.WebApp.Models.TaskStatus>()"></select>
                                <span asp-validation-for="Status" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4 mt-3">
                            <label asp-for="AssigneeId" class="form-label fw-semibold"></label>
                            <select asp-for="AssigneeId" class="form-select" asp-items="ViewBag.Users"></select>
                            <span asp-validation-for="AssigneeId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-flex gap-2 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">Save Changes</button>
                            <a asp-action="Index" asp-route-listId="@listId" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
