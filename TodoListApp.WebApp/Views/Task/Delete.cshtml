@model TodoListApp.WebApp.ViewModels.TaskViewModel
@{
    var listId = ViewBag.ListId as int? ?? Model.ToDoListId;
    ViewData["Title"] = "Delete Task";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="mb-4">
                <h1 class="display-6 fw-bold text-danger">Delete Task</h1>
                <div class="alert alert-warning border-0 shadow-sm mt-3" role="alert">
                    <h5 class="alert-heading mb-2">⚠️ Warning</h5>
                    <p class="mb-0">Are you sure you want to delete this task? This action cannot be undone.</p>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0 fw-semibold">Task Details</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted fw-semibold">Title</dt>
                        <dd class="col-sm-9 fw-medium">@Model.Title</dd>

                        <dt class="col-sm-3 text-muted fw-semibold">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3 text-muted fw-semibold">Due date</dt>
                        <dd class="col-sm-9">
                            @if (Model.DueDate.HasValue)
                            {
                                @Model.DueDate.Value.ToLocalTime().ToString("D")
                            }
                            else
                            {
                                <span class="text-muted">No due date set</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted fw-semibold">Status</dt>
                        <dd class="col-sm-9">@Model.Status</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" asp-route-id="@Model.Id" asp-route-listId="@listId">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ToDoListId" />
                @Html.AntiForgeryToken()
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-lg px-4 shadow-sm">Confirm Delete</button>
                    <a asp-action="Index" asp-route-listId="@listId" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
