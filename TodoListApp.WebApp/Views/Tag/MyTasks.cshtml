@model IEnumerable<TodoListApp.WebApp.ViewModels.TaskViewModel>
@{
    var tagName = ViewBag.TagName as string ?? "Tag";
    ViewData["Title"] = $"My tasks with '{tagName}'";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-1">@tagName</h1>
            <p class="text-muted small mb-0">Tasks assigned to you with this tag.</p>
        </div>
        <a asp-controller="Task" asp-action="Assigned" class="btn btn-outline-secondary">Back to my tasks</a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">Title</th>
                            <th class="px-4 py-3 fw-semibold">List</th>
                            <th class="px-4 py-3 fw-semibold">Due</th>
                            <th class="px-4 py-3 fw-semibold">Status</th>
                            <th class="px-4 py-3 text-end fw-semibold" style="width: 170px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                var rowClass = item.IsOverdue ? "table-danger" : string.Empty;
                                <tr class="@rowClass">
                                    <td class="px-4 py-3 fw-medium text-dark">
                                        @(item.Title?.Length > 40 ? item.Title.Substring(0, 40) + "..." : item.Title)
                                        @if (item.IsOverdue)
                                        {
                                            <span class="badge bg-danger ms-2">Overdue</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-muted">@item.ToDoListTitle</td>
                                    <td class="px-4 py-3 text-muted">
                                        @if (item.DueDate.HasValue)
                                        {
                                            @item.DueDate.Value.ToLocalTime().ToString("d")
                                        }
                                        else
                                        {
                                            <span class="text-muted">No due date</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3">
                                        @switch (item.Status)
                                        {
                                            case TodoListApp.WebApp.Models.TaskStatus.NotStarted:
                                                <span class="badge bg-secondary">Not Started</span>
                                                break;
                                            case TodoListApp.WebApp.Models.TaskStatus.InProgress:
                                                <span class="badge bg-info text-dark">In Progress</span>
                                                break;
                                            case TodoListApp.WebApp.Models.TaskStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-end">
                                        <a asp-controller="Task" asp-action="AssignedDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="px-4 py-3 text-muted" colspan="5">No tasks assigned to you with this tag.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
