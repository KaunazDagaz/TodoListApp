@model IEnumerable<TodoListApp.WebApp.ViewModels.TagViewModel>
@{
    var listId = ViewBag.ListId as int? ?? 0;
    var listTitle = ViewBag.ListTitle as string ?? "List";
    ViewData["Title"] = $"Tags - {listTitle}";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <p class="text-uppercase text-muted mb-1 small">To-Do List</p>
            <h1 class="display-6 fw-bold text-primary mb-0">@listTitle</h1>
            <p class="text-muted small mb-0">All tags across tasks you own in this list.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Task" asp-action="Index" asp-route-listId="@listId" class="btn btn-outline-secondary">Back to tasks</a>
            <a asp-controller="ToDoList" asp-action="Index" class="btn btn-outline-secondary">All lists</a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">Tag</th>
                            <th class="px-4 py-3 fw-semibold" style="width: 160px;">Tasks using tag</th>
                            <th class="px-4 py-3 fw-semibold text-end" style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var tag in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 fw-medium text-dark">@tag.Name</td>
                                    <td class="px-4 py-3 text-muted">@tag.TaskCount</td>
                                    <td class="px-4 py-3 text-end">
                                        <a asp-action="Tasks" asp-route-listId="@listId" asp-route-tagId="@tag.Id" class="btn btn-sm btn-outline-primary">View tasks</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="px-4 py-3 text-muted" colspan="3">No tags yet. Add tags from the task edit page.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
