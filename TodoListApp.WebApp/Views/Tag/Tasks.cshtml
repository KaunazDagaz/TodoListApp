@model IEnumerable<TodoListApp.WebApp.ViewModels.TaskViewModel>
@{
    var listId = ViewBag.ListId as int? ?? 0;
    var listTitle = ViewBag.ListTitle as string ?? "List";
    var tagName = ViewBag.TagName as string ?? "Tag";
    ViewData["Title"] = $"Tasks tagged '{tagName}'";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <p class="text-uppercase text-muted mb-1 small">@listTitle</p>
            <h1 class="display-6 fw-bold text-primary mb-0">@tagName</h1>
            <p class="text-muted small mb-0">Tasks you own in this list with this tag.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Tag" asp-action="Index" asp-route-listId="@listId" class="btn btn-outline-secondary">Back to tags</a>
            <a asp-controller="Task" asp-action="Index" asp-route-listId="@listId" class="btn btn-outline-secondary">Back to tasks</a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">Title</th>
                            <th class="px-4 py-3 fw-semibold">Due</th>
                            <th class="px-4 py-3 fw-semibold">Status</th>
                            <th class="px-4 py-3 fw-semibold">Assignee</th>
                            <th class="px-4 py-3 fw-semibold text-end" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 fw-medium text-dark">
                                        <a asp-controller="Task" asp-action="Details" asp-route-id="@item.Id" asp-route-listId="@listId" class="text-decoration-none text-dark">
                                            @(item.Title?.Length > 40 ? item.Title.Substring(0, 40) + "..." : item.Title)
                                        </a>
                                    </td>
                                    <td class="px-4 py-3 text-muted">
                                        @if (item.DueDate.HasValue)
                                        {
                                            @item.DueDate.Value.ToLocalTime().ToString("d")
                                        }
                                        else
                                        {
                                            <span class="text-muted">No due date</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3">
                                        @switch (item.Status)
                                        {
                                            case TodoListApp.WebApp.Models.TaskStatus.NotStarted:
                                                <span class="badge bg-secondary">Not Started</span>
                                                break;
                                            case TodoListApp.WebApp.Models.TaskStatus.InProgress:
                                                <span class="badge bg-info text-dark">In Progress</span>
                                                break;
                                            case TodoListApp.WebApp.Models.TaskStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-muted">
                                        @(string.IsNullOrWhiteSpace(item.AssigneeDisplay) ? item.AssigneeId.ToString() : item.AssigneeDisplay)
                                    </td>
                                    <td class="px-4 py-3 text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Task" asp-action="Details" asp-route-id="@item.Id" asp-route-listId="@listId" class="btn btn-sm btn-outline-secondary">Details</a>
                                            <a asp-controller="Task" asp-action="Edit" asp-route-id="@item.Id" asp-route-listId="@listId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="px-4 py-3 text-muted" colspan="5">No tasks with this tag.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
