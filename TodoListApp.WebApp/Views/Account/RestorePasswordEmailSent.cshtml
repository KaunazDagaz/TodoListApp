@{
    ViewData["Title"] = "Password restore email sent";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <h2 class="mb-4">Check your email</h2>
        <p>
            If an account with the provided email exists, we have sent password recovery instructions.
            Please follow the link in the email to set a new password.
        </p>
        <a asp-action="Login" class="btn btn-primary mt-3">Back to sign in</a>
    </div>
</div>

