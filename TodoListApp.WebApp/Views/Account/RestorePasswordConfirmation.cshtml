@model TodoListApp.WebApp.ViewModels.RestorePasswordViewModel
@{
    ViewData["Title"] = "Confirm password restore";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 text-center">
        <h2 class="mb-4">Confirm password restore</h2>
        <p>We will send password recovery instructions to:</p>
        <p class="fw-bold">@Model.Email</p>
        <p>Do you want to continue?</p>

        <form asp-action="SendRestorePasswordEmail" method="post" class="d-inline">
            <input type="hidden" asp-for="Email" />
            <button type="submit" class="btn btn-primary me-2">Confirm</button>
        </form>

        <a asp-action="RestorePassword" class="btn btn-outline-secondary">Cancel</a>
    </div>
</div>

