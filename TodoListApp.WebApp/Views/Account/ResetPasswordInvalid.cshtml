@{
    ViewData["Title"] = "Invalid password reset link";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <h2 class="mb-4">Invalid or expired link</h2>
        <p>
            The password reset link is invalid or has already been used.
            Please request a new password restore link.
        </p>
        <a asp-action="RestorePassword" class="btn btn-primary mt-3">Restore password again</a>
    </div>
</div>

