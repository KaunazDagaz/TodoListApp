@model TodoListApp.WebApp.ViewModels.CommentSectionViewModel

<div class="card shadow-sm border-0 rounded-3 mt-3">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-semibold">Comments</h5>
            <span class="text-muted small">Only the creator or assignee can comment</span>
        </div>

        @if (TempData["CommentError"] != null)
        {
            <div class="alert alert-danger" role="alert">@TempData["CommentError"]</div>
        }
        @if (TempData["CommentMessage"] != null)
        {
            <div class="alert alert-success" role="alert">@TempData["CommentMessage"]</div>
        }

        <div class="mb-4">
            @if (Model.Comments != null && Model.Comments.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="d-flex align-items-center gap-2 mb-1">
                                        <span class="fw-semibold">@comment.OwnerDisplay</span>
                                        @if (comment.IsMine)
                                        {
                                            <span class="badge bg-primary-subtle text-primary border border-primary">You</span>
                                        }
                                    </div>
                                    <p class="mb-1">@comment.Text</p>
                                    <div class="text-muted small">
                                        <span>@comment.CreatedAt.ToLocalTime().ToString("g")</span>
                                        @if (comment.UpdatedAt.HasValue)
                                        {
                                            <span class="ms-2">(edited @comment.UpdatedAt.Value.ToLocalTime().ToString("g"))</span>
                                        }
                                    </div>
                                </div>
                                @if (comment.IsMine)
                                {
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Comment" asp-action="Edit" asp-route-id="@comment.Id" asp-route-taskId="@Model.TaskId" asp-route-listId="@Model.ListId" asp-route-origin="@Model.Origin" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form asp-controller="Comment" asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@comment.Id" />
                                            <input type="hidden" name="taskId" value="@Model.TaskId" />
                                            <input type="hidden" name="listId" value="@Model.ListId" />
                                            <input type="hidden" name="origin" value="@Model.Origin" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this comment?');">Delete</button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <span class="text-muted">No comments yet.</span>
            }
        </div>

        @if (Model.CanComment)
        {
            <form asp-controller="Comment" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="TaskId" value="@Model.TaskId" />
                <input type="hidden" name="ListId" value="@Model.ListId" />
                <input type="hidden" name="Origin" value="@Model.Origin" />
                <div class="mb-3">
                    <label class="form-label fw-semibold" for="comment-text">Add a comment</label>
                    <textarea class="form-control" id="comment-text" name="Text" rows="3" maxlength="2000" required></textarea>
                    <div class="form-text">2000 characters max.</div>
                </div>
                <button type="submit" class="btn btn-outline-primary">Post Comment</button>
            </form>
        }
        else
        {
            <div class="alert alert-info mb-0">Only the task creator or assignee can add comments.</div>
        }
    </div>
</div>
